{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,

    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolvePackageJsonExports": false
  },
  "include": ["./src"]
}